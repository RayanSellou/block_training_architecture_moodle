<button type="button" class="blocktrainingarchitecture-btn-modal-training" data-toggle="modal" data-target="#descriptionModal{{type}}{{id}}" id="modal-btn-{{type}}-{{id}}">
    <img class="blocktrainingarchitecture-img-description" src="{{image_url}}" width="20px">
</button>

<div class="modal fade" id="descriptionModal{{type}}{{id}}" tabindex="-1" aria-labelledby="descriptionModalLabel{{type}}{{id}}" aria-hidden="true">
    <div class="modal-dialog" id="custom-modal">
        <div class="modal-content" id="custom-modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="descriptionModalLabel{{type}}{{id}}">{{modal_title}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{{description}}}
            </div>
        </div>
    </div>
</div>
