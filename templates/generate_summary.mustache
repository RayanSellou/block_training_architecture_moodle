<details {{#open}}open{{/open}}>
    <summary class="{{class}}" style="{{margin_style_1}}">
        {{{level_name}}}
        {{#description}}
            <button type="button" class="blocktrainingarchitecture-btn-modal-training" data-toggle="modal" data-target="#descriptionModalLu{{id}}">
                <img class="blocktrainingarchitecture-img-description" src="{{description_icon}}" width="20px">
            </button>

            <div class="modal fade" id="descriptionModalLu{{id}}" tabindex="-1" aria-labelledby="descriptionModalLabelLu{{id}}" aria-hidden="true">
                <div class="modal-dialog" id="custom-modal">
                    <div class="modal-content" id="custom-modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="descriptionModalLabelLu{{id}}">{{#str}}descriptionmodaltitle, block_training_architecture{{/str}}</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">{{{description}}}</div>
                    </div>
                </div>
            </div>
        {{/description}}
    </summary>

    <div style="{{margin_style_2}}">
        {{#is_course_context}}
            {{{courses_html}}}
        {{/is_course_context}}
        {{^is_course_context}}
            <div class="courses row row">
                {{{courses_html}}}
            </div>
        {{/is_course_context}}
    </div>
</details>